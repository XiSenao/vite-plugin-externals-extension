{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "rootDir": "src",
    "noUnusedParameters": true,
    "composite": true
  },
  "include": [
    "src/**/*",
    "*.d.ts",
    "examples/**/*"
  ]
}